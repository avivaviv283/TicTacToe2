<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACDDF8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="casual"
        android:text="Welcome to Tic Tac Toe 2!"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="goGame"
        android:drawableLeft="@drawable/play"
        android:backgroundTint="@color/teal_200"
        android:text="Play" />
    <Button
        android:id="@+id/stats1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="goStats"
        android:textSize="12dp"
        android:drawableLeft="@drawable/stats"
        android:backgroundTint="@color/teal_200"
        android:text="Statistics" />

    <Button
        android:id="@+id/rules"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="goRules"
        android:drawableLeft="@drawable/rules"
        android:backgroundTint="@color/teal_200"
        android:text="rules" />

    <Button
        android:id="@+id/maps"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_name"
        android:layout_margin="20dp"
        android:backgroundTint="@color/teal_200"
        android:onClick="goMaps"
        android:text="Maps"/>

</LinearLayout>